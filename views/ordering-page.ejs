<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Ordering Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: rgb(255, 255, 0, 0.10);
            color: #333;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        header {
            text-align: center;
            margin-bottom: 40px;
            position: relative;
            color: black;
        }
        h1 {
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 5px;
        }
        h2 {
            font-size: 1.2rem;
            font-weight: 300;
            color: black;
        }
        .slideshow-container {
            width: 100%;
            position: relative;
            margin-bottom: 20px; 
            overflow: hidden;
        }
        .mySlides img {
            width: 100%;
            height: 100%; 
            object-fit: cover; 
            border-radius: 0; 
        }
        .mySlides {
            display: none; 
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
        }
        .dot {
            height: 15px;
            width: 15px;
            margin: 0 2px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
            cursor: pointer;
            margin-top: 20pt;
        }
        .active, .dot:hover {
            background-color: #717171; 
        }
        .book-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            max-width: 1000px;
            width: 100%;
        }
        .book {
            border: 1px solid black; 
            border-radius: 8px; 
            padding: 15px; 
            background-color: #fff; 
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); 
            transition: transform .2s ease, box-shadow .2s ease; 
            text-align: center; 
        }
        .book:hover { 
            transform: translateY(-5px); 
            box-shadow: 0px 6px 15px rgba(0, 0, 0, .15); 
        }
        .book img { 
            width: 170px; 
            height: 200px; 
            object-fit: cover; 
            margin-bottom: 15px; 
            border-radius: 5px; 
        }
        .book h3 { 
            font-size: 1rem; 
            font-weight: 500; 
            color: black; 
            margin-bottom: 8px; 
        }
        .book p { 
            font-size: 0.9rem; 
            color: black; 
        }
        dialog { 
            border: none; 
            border-radius: 8px; 
            padding: 20px; 
            max-width: 400px; 
            width: 90%; 
            margin: auto;
        }
        ::backdrop { 
            background-color: rgba(0, 0, 0, .5); 
        }
        #dialogMessage { 
            font-size: 1.2rem;
            margin-bottom: 20px;
        }
        .button { 
            flex: 1; 
            padding: 12px; 
            font-size: 1rem; 
            font-weight: bold; 
            border-radius: 5px; 
            border: none; 
            cursor: pointer; 
            transition: background-color .3s; 
        }
        .top-header {
            background-color: #2780cb;
            color: white;
            margin-bottom: -1px;
            padding: 10px;
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
            font-size: 15pt;
        }
        .navbar {
            background-color: yellow;
            padding: 10pt;
            display: flex;
        }
        .order-button { 
            background-color: #0275d8;
            color: white;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            padding: 2pt;
            font-size: 11pt;
        } 
        .order-button:hover { 
            background-color: #025aa5;
            color: white;
        } 
        .add-to-cart-button { 
            background-color: #4CAF50;
            color: white;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            padding: 2pt;
            font-size: 11pt;
        } 
        .add-to-cart-button:hover { 
            color: white;
            background-color: #45a049;
        }
        .cancel-button { 
            background-color: #f44336;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            padding: 2pt;
            font-size: 11pt;
        } 
        .cancel-button:hover { 
            background-color: #e53935;
        } 
        #cartIcon {
            border: none;
            background: none; 
            padding: 0; 
            cursor: pointer;
            margin-left: 740pt;
        }
        .learn {
            text-decoration: none;
            color: gray;
        }
        .admin-login {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: #025aa5;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
        }
        .button-container {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }
        .add-to-cart-button, .buy-now-button {
            padding: 10px 20px;
            font-size: 14px;
            font-weight: bold;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 48%; /* Ensure both buttons fit in the container */
        }
        .add-to-cart-button {
            background-color: #4CAF50;
        }
        .add-to-cart-button:hover {
            background-color: #45a049;
        }
        .buy-now-button {
            color: white;
            background-color: #0275d8;
        }
        .buy-now-button:hover {
            color: white;
            background-color: #025aa5;
        }
        .elements{
            margin-left: 150px;
        }
        .icon{
            width: 45px;
            height: 45px;
            padding-bottom: 0;
        }
    </style>
</head>
<body>
    <header>
        <h1 class="top-header">ONLINE SHOP BOOKSTORE NATIONWIDE</h1>
        <nav class="navbar">
            <img src="/uploads/icon.png" alt="" style="width: 150pt;">
            <div class="elements">
                <button id="cartIcon" onclick="window.location.href='/cart'">
                    <img src="/uploads/cart.png" class="icon" alt="Cart Icon">
                </button> &nbsp;
                <a href="/admin/login" class="admin-login">Login</a>
            </div>
        </nav>
        <div class="slideshow-container">
            <div class="mySlides fade">
                <img src="/uploads/1.png" alt="Slide 1">
            </div>
            <div class="mySlides fade">
                <img src="/uploads/2.png" alt="Slide 2">
            </div>
            <div class="mySlides fade">
                <img src="/uploads/3.png" alt="Slide 3">
            </div>
    
            <div style="text-align:center">
                <span class="dot" onclick="currentSlide(1)"></span> 
                <span class="dot" onclick="currentSlide(2)"></span> 
                <span class="dot" onclick="currentSlide(3)"></span> 
            </div>
        </div>
    
        <h1 style="text-shadow: 1px 2px #2780cb; font-family: Georgia, 'Times New Roman', Times, serif">Fairy Tale Selections</h1>
        <h2>Select Your Books</h2>
    </header>
    <main>
        <section class="book-list">
            <% books.forEach(book => { %>
                <div class="book" data-id="<%= book.id %>" data-title="<%= book.name %>" data-price="<%= book.price %>" data-author="<%= book.author %>" data-genre="<%= book.genre %>">
                    <img src="<%= book.image %>" alt="<%= book.name %>">
                    <h3><%= book.name %></h3>
                    <p><strong>Author:</strong> <%= book.author %></p>
                    <p><strong>Genre:</strong> <%= book.genre %></p>
                    <p><strong>Price:</strong> â‚±<%= (parseFloat(book.price) || 0).toFixed(2) %></p>
                    <button class="add-to-cart-button">Add to Cart</button>
                    <button class="buy-now-button">Buy Now</button>
                </div>
            <% }); %>
        </section>        
        <br><br><br><br><br>
    </main>
    
    <script>
    // Slideshow functionality
    let slideIndex = 0;

    function showSlides() {
        const slides = document.querySelectorAll('.mySlides');
        const dots = document.querySelectorAll('.dot');
        
        // Hide all slides
        slides.forEach(slide => slide.style.display = "none");
        
        slideIndex++;
        if (slideIndex > slides.length) { slideIndex = 1; }
        
        // Show current slide
        slides[slideIndex - 1].style.display = "block";
        
        // Highlight the corresponding dot
        dots.forEach(dot => dot.classList.remove("active"));
        dots[slideIndex - 1].classList.add("active");
        
        setTimeout(showSlides, 2000); // Change slide every 2 seconds
    }
    showSlides();

    // Add to Cart functionality
    const addToCartButtons = document.querySelectorAll('.add-to-cart-button');
    addToCartButtons.forEach(button => {
        button.addEventListener('click', function() {
            const bookElement = button.closest('.book');
            const bookData = {
                id: bookElement.getAttribute('data-id'),
                title: bookElement.getAttribute('data-title'),
                price: bookElement.getAttribute('data-price'),
                author: bookElement.getAttribute('data-author'),
                genre: bookElement.getAttribute('data-genre')
            };

            // Check if cart exists in session storage
            let cart = JSON.parse(sessionStorage.getItem('cart')) || [];
            
            // Add item to cart
            cart.push(bookData);
            sessionStorage.setItem('cart', JSON.stringify(cart));

            // Alert user and change button text
            alert(`${bookData.title} has been added to your cart!`);
            button.textContent = 'Added';
            button.disabled = true; // Disable button after adding to cart
        });
    });
    
    // Update the Buy Now functionality to add to server session and redirect
const buyNowButtons = document.querySelectorAll('.buy-now-button');
buyNowButtons.forEach(button => {
    button.addEventListener('click', function() {
        const bookElement = button.closest('.book');
        const bookData = {
            id: bookElement.getAttribute('data-id'),
            title: bookElement.getAttribute('data-title'),
            price: bookElement.getAttribute('data-price'),
            author: bookElement.getAttribute('data-author'),
            genre: bookElement.getAttribute('data-genre')
        };

        // Add to cart via API route (not sessionStorage)
        fetch('/add-to-cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(bookData)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.href = '/cart';  // Redirect to the cart page
            }
        })
        .catch(err => {
            console.error('Error adding to cart:', err);
        });
    });
});

    </script>
</body>
</html>
