<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book List</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            background-image: url(/uploads/bg2.jpg); 
            background-size: cover; 
            background-position: center; 
            background-repeat: no-repeat; 
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .book-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            width: 100%;
            max-width: 1100px;
            padding-top: 15px;
            margin-top: 40px;
        }

        .book-card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            text-align: center;
            padding: 20px;
            transition: transform 0.3s ease;
        }

        .book-card:hover {
            transform: scale(1.05);
        }

        .book-image img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }

        .book-details {
            padding-top: 15px;
        }

        .book-name {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        .book-author {
            font-size: 16px;
            color: #555;
            margin-top: 5px;
        }

        .book-genre {
            font-size: 14px;
            color: #777;
            margin-top: 5px;
        }

        .book-price {
            font-size: 16px;
            font-weight: bold;
            color: #0275d8;
            margin-top: 10px;
        }

        .add-book-container {
            background-color: white;   /* Match the background color of the book cards */
            border-radius: 10px;       /* Same rounded corners as the book cards */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Same shadow effect */
            padding: 10px;
            text-align: center;
            margin-top: 30px;
            cursor: pointer;
            transition: transform 0.3s ease, background-color 0.3s ease; /* Added transform for hover effect */
        }

        .add-book-container:hover {
            transform: scale(1.05); /* Same hover scale effect as the book cards */
            background-color: #f1f1f1; /* Slightly lighter background on hover */
        }

        .add-book-image img {
            width: 50%;
            height: 50px; /* Adjusted size for the "Add a Book" image */
            object-fit: cover;
            border-radius: 10px;  /* Keep the rounded corners for the image */
        }

        .add-book-text {
            font-size: 20px;
            font-weight: bold;
            color: #0275d8;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        /* Small Logout Button Styling */
        .logout-button {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 8px 15px;
            background-color: #f44336;
            color:black;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            font-weight: bold;
        }

        .logout-button:hover {
            background-color: #d32f2f;
        }
    </style>
</head>
<body>

    <!-- Small Logout Button -->
    <button class="logout-button" id="logout">Logout</button>

    <h2 style ="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 50px;">Book List</h2>

    <!-- Add Book Section -->
    <div class="add-book-container" onclick="window.location.href='/admin/add-book'">
        <div class="add-book-image">
            <img src="/uploads/add.png" alt="Add Book">
        </div>
        <div class="add-book-text">
            Add a Book
        </div>
    </div>

    <div class="book-container">
        <% books.forEach(book => { %>
            <div class="book-card">
                <div class="book-image">
                    <img src="<%= book.image %>" alt="<%= book.name %>">
                </div>
                <div class="book-details">
                    <div class="book-name"><%= book.name %></div>
                    <div class="book-author"><strong>Author:</strong> <%= book.author %></div>
                    <div class="book-genre"><strong>Genre:</strong> <%= book.genre %></div>
                    <div class="book-price"><strong>Price:</strong>â‚±<%= book.price %></div>
                </div>
            </div>
        <% }) %>
    </div>

    <script>
        // Logout functionality
        document.getElementById('logout').addEventListener('click', function() {
            // Clear the session (on the server side)
            fetch('/logout', { method: 'POST' })
                .then(() => {
                    // Redirect to the ordering page after logging out
                    window.location.href = '/';
                })
                .catch(error => {
                    console.error('Error logging out:', error);
                    window.location.href = '/'; // Redirect in case of any issues
                });
        });
    </script>

</body>
</html>
